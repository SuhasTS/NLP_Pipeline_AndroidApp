<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suhas.nlp_pipeline.activities.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/firstFileSelector"
        android:text="File 1"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/firstFileSelector"
        android:id="@+id/secondFileSelector"
        android:text="File 2"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/secondFileSelector"
        android:layout_marginTop="20dp"
        android:text="Get similarity"
        android:id="@+id/similarityPost"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/similarityScore"
        android:layout_below="@id/similarityPost"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
